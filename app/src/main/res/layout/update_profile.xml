<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.UpdateProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hello" />

            <EditText
                android:id="@+id/orderGravida"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Order of Gravida"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/age"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Age"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/height"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Height"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Weight"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/midarmcir"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mid arm circumferene"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/workload"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Workload"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/anemia"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Anemia"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/asthma"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Asthma"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/bad_obsteric_history"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Bad obsteric history"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/injection"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Injection"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/falif"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="falif"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/iron"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Iron intake"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/second_workload"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Workload"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/convolusion"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Convolusion"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/bleed"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Bleed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/asthma2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Asthma"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/injection2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second injection"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/iron2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second iron"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/convolusion2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Convolusion"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/bleed2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second bleed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <EditText
                android:id="@+id/fever"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fever"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="20dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>